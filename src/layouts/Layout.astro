---
import '../main.css'
import NavElTiempo from '$components/NavElTiempo.astro'

const metaTitle = 'Un horizonte de pétalos en blanco y rosa: el inicio del ciclo de la sidra asturiana'
const metaDescription = 'Asturias, Paraíso Natural, se tiñe ahora de blanco bajo el manto de los pétalos del manzano, que comienza su floración con la llegada de la primavera.'
---

<!doctype html>
<html lang="es-ES">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="noindex,nofollow" />
		<title>{metaTitle}</title>
		<meta property="description" content={metaDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="/" />
		<meta property="og:image" content="/thumbnail.jpg" />
		<meta property="og:title" content={metaTitle} />
		<meta property="og:description" content={metaDescription} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:image" content="/thumbnail.jpg" />
		<meta property="twitter:title" content={metaTitle} />
		<meta property="twitter:description" content={metaDescription} />
		<link rel="icon" href="/favicon.png" />
	</head>
	<body>
		<NavElTiempo />
		<div class="overflow-clip">
			<slot />
		</div>
		<script src="../main.ts"></script>
	</body>
</html>
